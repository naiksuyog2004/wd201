<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Suyog Todo Manager</title>
    <link rel="stylesheet" href="css/styles.css" />
    <!-- <script src="js/script.js"></script> -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %>
        <form>
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input
                type="text"
                placeholder="What's next"
                class="border border-grey-300 rounded text-grey-900 w-full p-2 text-sm"
                required
              />
            </div>
            <div class="flex-auto">
              <input
                type="date"
                class="border border-grey-300 rounded text-grey-900 w-full p-2 text-sm leading-4"
                required
              />
            </div>
            <div class="flex-none">
              <button
                type="submit"
                class="bg-green-600 text-white py-1.5 px-5 rounded font-medium mr-2 mb-2"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <%- include("todos.ejs") %> <%- include("footer.ejs") %>
      </div>
    </div>
  </body>
</html>
